{
  "name": "dev-toolbox",
  "version": "1.0.0",
  "description": "集成常用开发者工具的桌面应用",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "build:win": "vue-tsc && vite build && electron-builder --win",
    "build:mac": "vue-tsc && vite build && electron-builder --mac",
    "build:linux": "vue-tsc && vite build && electron-builder --linux",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "electron:build": "vue-tsc && vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "developer",
    "tools",
    "electron",
    "vue",
    "diff",
    "base64",
    "json",
    "url"
  ],
  "author": "Jiao Lee",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.19",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vue-tsc": "^2.0.26"
  },
  "dependencies": {
    "@vueuse/core": "^13.6.0",
    "diff-match-patch": "^1.0.5",
    "electron-store": "^10.0.0",
    "framer-motion": "^11.3.2",
    "lucide-vue-next": "^0.408.0",
    "vue": "^3.4.31",
    "vue-router": "^4.4.0"
  },
  "build": {
    "appId": "com.devtoolbox.app",
    "productName": "Dev Toolbox",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}

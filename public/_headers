# Cloudflare Pages 缓存配置
# 参考: https://developers.cloudflare.com/pages/configuration/headers/

# 所有静态资源 - 长期缓存 (1年)
# /assets/ 目录包含所有带 hash 的 JS、CSS、字体等文件
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# 根目录的 Workbox 文件 - 长期缓存
/workbox-*.js
  Cache-Control: public, max-age=31536000, immutable

# PWA 图标
/pwa-*.png
  Cache-Control: public, max-age=31536000, immutable

# 其他图片资源
/favicon.ico
  Cache-Control: public, max-age=31536000, immutable
/favicon.svg
  Cache-Control: public, max-age=31536000, immutable
/logo.svg
  Cache-Control: public, max-age=31536000, immutable
/image.png
  Cache-Control: public, max-age=31536000, immutable
/json.png
  Cache-Control: public, max-age=31536000, immutable

# Service Worker - 必须不缓存，确保及时更新
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# registerSW.js - 必须不缓存
/registerSW.js
  Cache-Control: no-cache, no-store, must-revalidate

# PWA Manifest - 短期缓存以便及时更新
/manifest.webmanifest
  Cache-Control: public, max-age=0, must-revalidate

# HTML 入口页面 - 不缓存，始终获取最新版本
/
  Cache-Control: no-cache, no-store, must-revalidate
/index.html
  Cache-Control: no-cache, no-store, must-revalidate

# 所有页面通用安全头
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
